    <None Remove="Configurations\mail.json" />
    <None Remove="Configurations\middleware.json" />
    <None Remove="Configurations\openapi.json" />
    <None Remove="Configurations\security.json" />
    <None Remove="Configurations\securityheaders.json" />
    <None Remove="Configurations\signalr.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="appsettingsOld.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
