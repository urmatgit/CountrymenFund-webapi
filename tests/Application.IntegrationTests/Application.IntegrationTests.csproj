<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appsettingsOld.json" />
    <None Remove="Configurations\cache.json" />
    <None Remove="Configurations\cors.Development.json" />
    <None Remove="Configurations\cors.json" />
    <None Remove="Configurations\database.Development.json" />
    <None Remove="Configurations\database.json" />
    <None Remove="Configurations\hangfire.Development.json" />
